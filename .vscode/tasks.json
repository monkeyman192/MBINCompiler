{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-NET5-release",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                // Build for release
                "-c", "Release",
                // Build for .net 5 framework
                "-f", "net5.0-windows",
                // Build for 64 bit windows
                "-r", "win-x64",
                // Set the output folder explicitly
                "-o", "Build/Release/net5/",
                // Ignore some error
                "/nowarn:cs0618"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}